function Trig_Northshire_Actions takes nothing returns nothing
    call DisplayTextToForce(GetPlayersAllies(Player(4)), "Мы разрушили последний оплот Азерота!  Пусть эта победа послужит уведомлением для союзников этих жалких клириков, что теперь Легион правит Азеротом!")
    call DisplayTextToForce(GetPlayersAllies(Player(1)), "Последний оплот Азерота был разрушен! Не позвольте им захватить весь Азерот!")
    call AdjustPlayerStateBJ(100,Player(4),PLAYER_STATE_RESOURCE_GOLD)
    call AdjustPlayerStateBJ(100,Player(9),PLAYER_STATE_RESOURCE_GOLD)
    call AdjustPlayerStateBJ(100,Player(10),PLAYER_STATE_RESOURCE_GOLD)
    call AdjustPlayerStateBJ(100,Player(11),PLAYER_STATE_RESOURCE_GOLD)
    call AdjustPlayerStateBJ(750,Player(4),PLAYER_STATE_RESOURCE_LUMBER)
    call AdjustPlayerStateBJ(750,Player(9),PLAYER_STATE_RESOURCE_LUMBER)
    call AdjustPlayerStateBJ(750,Player(10),PLAYER_STATE_RESOURCE_LUMBER)
    call AdjustPlayerStateBJ(750,Player(11),PLAYER_STATE_RESOURCE_LUMBER)
    call KillUnit(gg_unit_h001_0122)
    call KillUnit(gg_unit_nwe2_0144)
    set udg_TempPoint=GetRectCenter(gg_rct_Northshire_Fire_1)
    call AddSpecialEffectLocBJ(udg_TempPoint,"Doodads\\Cinematic\\TownBurningFireEmitter\\TownBurningFireEmitter.mdl")
    call RemoveLocation(udg_TempPoint)
    set udg_TempPoint=GetRectCenter(gg_rct_Northshire_Fire_2)
    call AddSpecialEffectLocBJ(udg_TempPoint,"Doodads\\Cinematic\\TownBurningFireEmitter\\TownBurningFireEmitter.mdl")
    call RemoveLocation(udg_TempPoint)
    set udg_TempPoint=GetRectCenter(gg_rct_Northshire_Fire_3)
    call AddSpecialEffectLocBJ(udg_TempPoint,"Doodads\\Cinematic\\TownBurningFireEmitter\\TownBurningFireEmitter.mdl")
    call RemoveLocation(udg_TempPoint)
    set udg_TempPoint=GetRectCenter(gg_rct_Northshire_Fire_4)
    call AddSpecialEffectLocBJ(udg_TempPoint,"Doodads\\Cinematic\\TownBurningFireEmitter\\TownBurningFireEmitter.mdl")
    call RemoveLocation(udg_TempPoint)
    set udg_TempPoint=GetDestructableLoc(gg_dest_IOt0_0307)
    call RemoveDestructable(gg_dest_IOt0_0307)
    call CreateDestructableLoc('B002',udg_TempPoint,GetRandomDirectionDeg(),0.80,0)
    call RemoveLocation(udg_TempPoint)
    call RemoveDestructable(gg_dest_B006_3427)
    endfunction
    function InitTrig_Northshire takes nothing returns nothing
    set gg_trg_Northshire=CreateTrigger()
    call TriggerRegisterUnitEvent(gg_trg_Northshire,gg_unit_hvlt_0070,EVENT_UNIT_DEATH)
    call TriggerAddAction(gg_trg_Northshire,function Trig_Northshire_Actions)
    endfunction