<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <!-- colors -->
        <colorProvider implementation="raft.war.ide.openapi.editor.PluginElementColorProvider"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/Darcula.xml"/>

        <!-- file nesting -->
        <projectViewNestingRulesProvider
                implementation="raft.war.ide.ide.projectView.PluginProjectViewNestingRulesProvider"/>

        <!-- typing -->
        <typedHandler implementation="raft.war.ide.codeInsight.PluginTypedHandlerDelegate"/>

        <!-- startup -->
        <postStartupActivity implementation="raft.war.ide.openapi.startup.PluginProjectActivity"/>

        <!-- injection -->
        <multiHostInjector implementation="raft.war.ide.lang.injection.general.PluginScriptInjector"/>
    </extensions>
</idea-plugin>
