<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <!-- colors -->
        <colorProvider implementation="guru.xgm.plugin.openapi.editor.PluginElementColorProvider"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/Darcula.xml"/>

        <!-- file nesting -->
        <projectViewNestingRulesProvider
                implementation="guru.xgm.plugin.ide.projectView.PluginProjectViewNestingRulesProvider"/>

        <!-- typing -->
        <typedHandler implementation="guru.xgm.plugin.codeInsight.PluginTypedHandlerDelegate"/>

        <!-- sdk -->
        <sdkType implementation="guru.xgm.plugin.openapi.projectRoots.PluginSdkType"/>
        <postStartupActivity implementation="guru.xgm.plugin.openapi.startup.PluginProjectActivity"/>

        <!-- injection -->
        <multiHostInjector implementation="guru.xgm.plugin.lang.injection.general.PluginScriptInjector"/>
    </extensions>
</idea-plugin>
