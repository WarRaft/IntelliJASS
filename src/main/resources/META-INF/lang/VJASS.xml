<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="VJASS"
                  implementationClass="raft.war.language.vjass.VjassFileType"
                  fieldName="instance"
                  language="VJASS"
                  extensions="vj"
        />

        <!-- parser -->
        <lang.parserDefinition language="VJASS"
                               implementationClass="raft.war.language.vjass.lang.VjassParserDefinition"/>

        <!-- highlight -->
        <lang.syntaxHighlighterFactory language="VJASS"
                                       implementationClass="raft.war.language.vjass.highlight.VjassSyntaxHighlighterFactory"/>

        <!-- commenter -->
        <lang.commenter
                language="VJASS"
                implementationClass="raft.war.language.vjass.lang.VjassCommenter"/>
    </extensions>
</idea-plugin>
