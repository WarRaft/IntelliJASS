<!-- https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!-- https://plugins.jetbrains.com/plugin/23120-jass/edit -->
<idea-plugin>
    <id>JASS</id>
    <name>JASS</name>
    <version>2.0.3</version>
    <vendor url="https://xgm.guru">XGM</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
      Just Another Script System support plugin.
    ]]>
    </description>
    <change-notes>
        <![CDATA[
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="JASS file"
                  implementationClass="guru.xgm.jass.openapi.fileTypes.LanguageFileTypeJASS"
                  fieldName="INSTANCE"
                  language="JASS"
                  extensions="j"
        />
        <lang.parserDefinition
                language="JASS"
                implementationClass="guru.xgm.jass.lang.ParserDefinitionJASS"
        />
        <lang.syntaxHighlighterFactory
                language="JASS"
                implementationClass="guru.xgm.jass.openapi.fileTypes.SyntaxHighlighterFactoryJASS"
        />
        <colorSettingsPage
                implementation="guru.xgm.jass.openapi.options.colors.ColorSettingsPageJASS"
        />
        <lang.foldingBuilder
                language="JASS"
                implementationClass="guru.xgm.jass.lang.folding.CustomFoldingBuilderJASS"
        />
    </extensions>

</idea-plugin>
