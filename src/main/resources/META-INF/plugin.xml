<!-- https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<!-- https://plugins.jetbrains.com/plugin/23120-jass/edit -->
<idea-plugin>
    <id>JASS</id>
    <name>JASS</name>
    <version>2.0.4</version>
    <vendor url="https://xgm.guru">XGM</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="JASS file"
                  implementationClass="guru.xgm.jass.openapi.fileTypes.LanguageFileTypeJASS"
                  fieldName="INSTANCE"
                  language="JASS"
                  extensions="j"
        />
        <lang.parserDefinition
                language="JASS"
                implementationClass="guru.xgm.jass.lang.ParserDefinitionJASS"
        />
        <lang.syntaxHighlighterFactory
                language="JASS"
                implementationClass="guru.xgm.jass.openapi.fileTypes.SyntaxHighlighterFactoryJASS"
        />
        <colorSettingsPage
                implementation="guru.xgm.jass.openapi.options.colors.ColorSettingsPageJASS"
        />

        <!-- folding -->
        <lang.foldingBuilder language="JASS" implementationClass="guru.xgm.jass.lang.folding.CustomFoldingBuilderJASS"/>
        <codeFoldingOptionsProvider instance="guru.xgm.jass.lang.folding.CodeFoldingOptionsProviderJASS"/>
        <applicationService serviceImplementation="guru.xgm.jass.lang.folding.CodeFoldingSettingsJASS"/>

        <!-- formatter -->
        <lang.formatter language="JASS" implementationClass="guru.xgm.jass.formatting.FormattingModelBuilderJASS"/>

    </extensions>

    <description><![CDATA[
        <p>Just Another Scripting Syntax (JASS) for
            <a href="https://en.wikipedia.org/wiki/Warcraft_III:_Reign_of_Chaos">Warcraft III</a>.</p>
        <hr>
        Code folding, highlight and open binary ingame file.
        ]]></description>

    <change-notes><![CDATA[
        <p><b>2.0.4</b>:</p>
        <ul>
            <li>Folding globals and functions</li>
        </ul>
        ]]></change-notes>

</idea-plugin>
